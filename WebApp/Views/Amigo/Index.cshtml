@model IEnumerable<WebApp.Models.Amigo.ListarAmigoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @item.Id }) |
                @Html.ActionLink("Details", "Detais", new { @item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { @item.Id })
                <a href="/amigos/@item.Id"/paises">Pais</a>"
            </td>
        </tr>
}
    </tbody>
</table>
